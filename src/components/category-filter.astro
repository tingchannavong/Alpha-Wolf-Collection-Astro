<div class="filter">
    <label for="category-select">Filter by Categories:</label>
    <select id="category-select">
        <option value="all">All Categories</option>
        <option value="Economic">Economic</option>
        <option value="Card Game">Card Game</option>
        <option value="Party Game">Party Game</option>
        <option value="Abstract Strategy">Abstract Strategy</option>
        <option value="Bluffing">Bluffing</option>
        <option value="Negotiation">Negotiation</option>
        <option value="Deduction">Deduction</option>
        <option value="'Action / Dexterity">Dexterity</option>
        <option value="Cooperation">Cooperation</option>
        <option value="Word Game">Word Game</option>
        <option value="Children's Game">Children's Game</option>
        <option value="Mature / Adult">Mature / Adult</option>
    </select>
</div>
<div class="filter">
    <label for="location-select">Filter by Location:</label>
    <select id="location-select">
        <option value="all">All Locations</option>
        <option value="MakerBox Lao">Makerbox Lao</option>
        <option value="Stella">Stella</option>
        <option value="Lak6">Lak6</option>
        <option value="Nongnieng">Nongnieng</option>
        <!-- Add more locations as needed -->
    </select>
</div>
<div class="filter">
    <label for="player-num-select">Filter By Minimum Players:</label>
    <select id="player-num-select">
        <option value="all">All </option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>
</div>
<div class="sort">
    <label for="sort-title-select">Sort by Title:</label>
    <select id="sort-title-select">
        <option value="a-z">A-Z</option>
        <option value="z-a">Z-A</option>
        <option value="none">None</option>
    </select>
</div>

<div class="sort">
    <label for="sort-time-select">Sort by Playing Time:</label>
    <select id="sort-time-select">
        <option value="none">None</option>
        <option value="asc">Ascending</option>
        <option value="des">Descending</option>
    </select>
</div>

<div class="sort">
    <label for="sort-players-select">Sort by Players:</label>
    <select id="sort-players-select">
        <option value="none">None</option>
        <option value="asc">Ascending</option>
        <option value="des">Descending</option>
    </select>
</div>