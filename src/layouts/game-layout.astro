<style is:global>
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f7b01a; /*yellow*/
    color: #121f40; /*blue*/
}
/*Game details style section*/
.image-flex-container {
    display: flex;
    width: 45%;
    height: 600px;
    flex-direction: column;
}
.image-left-section {
    width: 100%;
    height: 70%;
    border-radius: 8px;
}
.main-game-image {
    display: block;
    margin-left: auto;
    margin-right: auto;

}
.game-gallery {
    display: inline-grid;
    justify-content: space-between;
    padding; 1px 1px;
    margin: auto;
    grid-template-columns: auto auto auto auto;
    height: 20%;
}
.game-images {
    border-style: solid;
    border-radius: 5px;
    margin: 5px 5px 5px 2px;

}
.game-right-section {
    width: 50%;
    height: 100%;
    margin: 0px;
    padding-top: 0px;
    padding-left: 15px;
}
.game-right-section p {
   text-align: justify;
}
.how-to-play {
    margin: 0;
    padding: 0;
    background-color: #601214; /*brown*/
}
.how-to-play h1 {
  font-size: 2em;
  margin-bottom: 20px;
  color: #feebbb;
}
.carousel {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.carousel-images {
  width: 80%;
  max-width: 600px;
  height: auto;
}

.carousel img {
  width: 100%;
  display: none;
}

.carousel img.active {
  display: block;
}

.prev-box {
    width: 10%;
    margin-left: 0;
    left: 0;
}

.next-box {
    width: 10%;
    right: 0;
    margin-right: 0;
}

button.prev, button.next {
  background-color: #00204a;
  color: white;
  border: none;
  padding: 10px;
  font-size: 2em;
  cursor: pointer;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 2;
}

button:hover {
  background-color: #f9d361;
  color: #00204a;
}

/* Page Counter (Dots) */
.page-counter {
  display: flex;
  justify-content: center;
  margin-top: 20px;
  padding-bottom: 20px;
}

.page-counter .dot {
  height: 15px;
  width: 15px;
  margin: 0 5px;
  background-color: #ccc;
  border-radius: 50%;
  display: inline-block;
  transition: background-color 0.3s ease;
}

.page-counter .dot.active {
  background-color: #00204a;
}

/* my try on instruction part*/
.instruction-flex {
    display: flex;
}
.instruction-img{
    display: block;
    margin-left: auto;
    margin-right: auto;
    padding: 0;
    width: 80%;
}
.prev-next-btn {
    background-color: #121f40;
    color: #feebbb;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1rem;
}
.button-loc{
    align-items: center;
    justify-content: center;
}

/*FLEXBOX for the HEADER section*/
.flex-container {
    display: flex;
    width: 80%;
    margin: 0 auto;
}
/*CONTAINER for CATEGORIES / ALL GAMES section*/
.container {
    width: 80%;
    margin: 0 auto;
    margin-top: 30px;
    margin-bottom: 30px;
    border-style: hidden;
}

header {
    background-color: #f7b01a;
    padding: 20px 0;
}
.logo {
    width: 150px;
    float: left;
}
nav {
    margin: auto;
    text-align: center;
    width: 550px;
}
nav ul {
    list-style-type: none;
}
nav ul li {
    display: inline;
    margin-left: 20px;
    padding: 5px;
}
nav ul li a {
    text-decoration: none;
    color: #121f40;
    font-style: bold;
}
nav ul li a:hover {
    border-bottom: 2px solid;
    color: #121f40;
    font-style: bold;
}
/*Search for boardgame in the header*/
.search-bar {
    float: right;
    margin-top: 10px;
}
.search-bar input {
    padding: 5px;
    border-radius: 5px;
    border: 1px solid #ccc;
}
.login-btn {
    background-color: #121f40;
    color: #fff;
    padding: 10px 20px;
    border-radius: 5px;
    text-decoration: none;
    float: right;
    margin-top: 10px;
    margin-left: 20px;
}
.back-btn {
    background-color: #f7b01a;
    color: #121f40;
    padding: 10px 20px;
    border-radius: 5px;
    text-decoration: none;
}
.back-btn:hover {
    background-color: #f7b01a;
    color: #121f40;
    padding: 10px 20px;
    border-radius: 5px;
    text-decoration: none;
    border: 1px solid;
}

/* Footer Section */
.footer {
    background-color: #121f40;
    color: white;
    padding: 40px 20px;
    text-align: center;
}

.footer-logo {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20px;
}

.footer-logo img {
    width: 80px;
    height: auto;
}

.footer-nav {
    width: 100%;
    margin: 10px;
    display: flex;
    text-align: center;
    justify-content: center;
    gap: 20px;
}

.footer-nav a {
    text-decoration: none;
    text-align: center;
    color: #f7b01a;
    font-size: 1.2rem;
    font-family: "Times";
}

.footer-nav a:hover {
    color: white;
}

.copyright-section {
    height: 20px;
    margin: 0;
    background-color: #f7b01a;
}
.copyright {
    margin-top: 20px;
    font-size: 0.9rem;
    color: black;
    text-align: center;
}

/* Responsive Design */
@media (max-width: 768px) {
    .game-item {
        flex-direction: column;
        text-align: center;
    }

    .pagination-section {
        flex-direction: column;
        gap: 20px;
    }

    .footer-nav {
        flex-direction: column;
        gap: 10px;
    }
}
</style>