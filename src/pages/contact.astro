---
import MainLayout from "../layouts/main-layout.astro";
---
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/alpha_style.css">
    <title>Contact Us</title>
</head>
<MainLayout>
    <body>
        <section class="container">
            <div class="contact-container">
                <div class="follow-right-view"> 
                    <h1 class="feedback-title"> Follow Us</h1>
                    <div class="form-row">
                        <span><img src="https://www.svgrepo.com/show/303113/facebook-icon-logo.svg" alt="Facebook Icon" class="social-icon"></span>
                        <h3>Facebook</h3>
                        <a href="https://www.facebook.com/alphawvbc/" target="_blank" class="social-link">@alphawvbc</a>
                    </div>
                    <div class="form-row">
                        <span><img src="https://www.svgrepo.com/show/303260/tiktok-logo-logo.svg" alt="Tiktok Icon" class="social-icon"></span>
                        <h3>TikTok</h3>
                        <a href="https://www.tiktok.com/@alphawolfvbc" target="_blank" class="social-link">@alphawolfwvbc</a>
                    </div>
                    <div class="form-row">
                        <span><img src="https://www.svgrepo.com/show/452229/instagram-1.svg" alt="Instagram Icon" class="social-icon"></span>
                        <h3>Instagram</h3>
                        <a href="https://www.instagram.com/alphagameshop_/" target="_blank" class="social-link">@alphagameshop</a>
                    </div>
                    <div>
                        <h1> Maps </h1>
                        <div>
                            <iframe class="map-location" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d340.6963735467205!2d102.60100529440426!3d17.973520837369787!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x312469e39bca4db5%3A0x65fd24efc0544be0!2z4Lqu4LuJ4Lqy4LqZIOC6meC6suC6hyDguorguqfgupkg4LqB4Lqy4LqZ4LuE4Lqf4Lqf4LuJ4LqyIOC7geC6peC6sCDguq3gurLgu4Tguqvgurzgu4jguqXgurvgupTgu4Pguqvguo3gu4ggKENodWFuJ3MgU2hvcCk!5e0!3m2!1sen!2sth!4v1770364587072!5m2!1sen!2sth" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                    </div> 
                </div>

                <div class="contact-left-view">
                    <h1 class="feedback-title"> Contact Us</h1> 
                    <form class="feedback-form">
                        <input type="email" class="input-field" placeholder="Enter your email..." required>
                        <input type="text" class="input-field" placeholder="Enter your name..." required>
                        <input type="text" class="input-field full-width" placeholder="Title..." required>
                        <textarea class="input-field textarea-field" placeholder="Message..." required></textarea>
                        <button type="submit" class="submit-button text">Send</button>
                    </form>
                </div>

            </div>
        </section>
    </body>
    
</MainLayout>